<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="rollingFileAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="/var/log/maxqueue.log"/>
        <param name="MaxFileSize" value="20MB"/>
        <param name="MaxBackupIndex" value="1"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %-17c{2} (%13F:%L) %3x - %m%n" />
        </layout>
    </appender>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{M-dd-yy HH:mm:ss} %-5p %c  %m%n"/>
        </layout>
    </appender>

    <!-- Application Loggers -->

    <logger name="com.max">
        <level value="trace" />
    </logger>


    <!-- 3rdparty Loggers -->

    <logger name="org.hibernate.tool.hbm2ddl">
        <level value="warn" />
    </logger>
    <logger name="openjpa.Log">
        <level value="info" />
    </logger>

    <logger name="org.springframework.security">
        <level value="info" />
    </logger>

    <logger name="org.apache.fop.apps">
        <level value="error" />
    </logger>

    <!-- Root Logger -->
    <root>
        <priority value="warn" />
        <appender-ref ref="rollingFileAppender" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>
